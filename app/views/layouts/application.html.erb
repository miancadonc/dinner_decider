<!DOCTYPE html>
<html>
  <head>
    <title>Dinner Decider</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "navbar navbar-inverse" role="navigation" >
      <div class = "container" >
        <% if logged_in? %>
          <%= link_to "User Page", user_path(current_user), class: "navbar-brand" %>
          <%= link_to "Log Out", logout_path, method: "delete", class: "navbar-brand" %>
        <% else %>
          <%= link_to "Sign Up", signup_path, class: "navbar-brand" %>
          <%= link_to "Log In", login_path, class: "navbar-brand" %>
        <% end %>
      </div>
    </div>

   

    <div class = "container wrapper" role = "main">

      <% flash.each do |type, msg| %>
        <div class="alert alert-info">
          <%= msg %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
