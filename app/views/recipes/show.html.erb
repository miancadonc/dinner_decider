<h1><%= @recipe.name %></h1>

<h3>Description:</h3>
<p><%= @recipe.description %></p>

<h3>Ingredients:</h3>
<ul>
<% no_blank_ingredients(@recipe).each do |ing| %>
    <li>
        <%= ing.magnitude %> <%= ing.unit %> <%= ing.ingredient.name %>
    </li>
<% end %>
</ul>

<h3>Instructions:</h3>
<p> <%= @recipe.instructions %> </p>

<%= link_to "Back to user page", user_path(@recipe.user_id) %>