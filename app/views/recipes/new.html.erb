<%= form_with model: @recipe, local: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>

    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
    <br>

    <%= f.submit "Create Recipe" %>


<% end %>